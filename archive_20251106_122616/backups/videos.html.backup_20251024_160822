    <script>
        const BUCKET_URL = 'https://d271vky579caz9.cloudfront.net';
        const AUTH_API = 'https://r6l0z3605f.execute-api.us-east-1.amazonaws.com/prod/auth';
        const TAG_API = 'https://h4hoegi26b.execute-api.us-east-1.amazonaws.com/prod/tags';
        
        let allVideos = [];
        let filteredVideos = [];
        let currentPage = 1;
        let currentCategory = 'all';
        let hasMore = true;
        const videosPerPage = 24;
        
        async function checkAuth() {
            const token = localStorage.getItem('auth_token');
            
            if (!token) {
                window.location.href = 'login.html';
                return false;
            }
            
            try {
                const response = await fetch(`${AUTH_API}?action=verify`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                
                if (!response.ok) {
                    localStorage.removeItem('auth_token');
                    localStorage.removeItem('user_data');
                    window.location.href = 'login.html';
                    return false;
                }
                
                return true;
            } catch (error) {
                console.error('Auth check failed:', error);
                window.location.href = 'login.html';
                return false;
            }
        }
        
        async function loadVideos(page = 1, category = 'all', append = false) {
            try {
                const userData = localStorage.getItem('user_data');
                const userEmail = userData ? JSON.parse(userData).email : '';
                const userRole = userData ? JSON.parse(userData).role : '';
                
                const tagResponse = await fetch(`${TAG_API}?action=list&user=${encodeURIComponent(userEmail)}&role=${encodeURIComponent(userRole)}&page=${page}&limit=${videosPerPage}&category=${category}`);
                const tagData = await tagResponse.json();
                
                console.log('TAG API response:', tagData);
                
                const container = document.getElementById('videos-container');
                
                if (tagData.videos && tagData.videos.length > 0) {
                    let videosWithMetadata = tagData.videos;
                    hasMore = tagData.has_more || false;
                    
                    if (append) {
                        allVideos = [...allVideos, ...videosWithMetadata];
                    } else {
                        allVideos = videosWithMetadata;
                        
                        // Calculate stats only on first load
                        const allTags = new Set();
                        let totalSize = 0;
                        videosWithMetadata.forEach(video => {
                            if (video.tags) {
                                video.tags.forEach(tag => allTags.add(tag));
                            }
                            // Add size if available (only for local videos)
                            if (video.size && video.video_type === 'local') {
                                totalSize += parseInt(video.size) || 0;
                            }
                        });
                        
                        document.getElementById('total-videos').textContent = tagData.total_count || videosWithMetadata.length;
                        document.getElementById('total-size').textContent = formatFileSize(totalSize);
                        document.getElementById('total-tags').textContent = allTags.size;
                        document.getElementById('stats-bar').style.display = 'flex';
                        
                        setupTagFilter(allTags);
                        setupSearch();
                        setupCategoryFilter();
                    }
                    
                    filteredVideos = [...allVideos];
                    displayVideos(append ? videosWithMetadata : filteredVideos, append);
                    
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('videos-container').style.display = 'flex';
                    document.getElementById('search-filter-bar').style.display = 'block';
                    document.getElementById('category-bar').style.display = 'block';
                    
                    // Show/hide load more button
                    if (hasMore) {
                        document.getElementById('load-more-container').style.display = 'block';
                    } else {
                        document.getElementById('load-more-container').style.display = 'none';
                    }
                } else if (!append) {
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('no-videos').style.display = 'block';
                    document.getElementById('load-more-container').style.display = 'none';
                }
                
            } catch (error) {
                console.error('Error loading videos:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('no-videos').style.display = 'block';
            }
        }
        
        function createVideoCard(container, title, videoUrl, thumbnailUrl, fallbackThumbnailUrl, filename, videoType = 'local', externalUrl = '') {
            const col = document.createElement('div');
            col.className = 'video-card-wrapper';
            
            const embedUrl = `https://d271vky579caz9.cloudfront.net/embed.html?v=${filename}&t=${encodeURIComponent(title)}`;
            
            if (videoType === 'local') {
                col.innerHTML = `
                    <div class="video-card">
                        <div class="thumbnail-container">
                            <img src="${thumbnailUrl}" alt="${title}" class="thumbnail" loading="lazy"
                                 onerror="this.onerror=null; this.src='${fallbackThumbnailUrl}'; if(this.complete && this.naturalHeight === 0) { this.style.display='none'; this.nextElementSibling.style.display='flex'; }" 
                                 onload="if(this.naturalHeight === 0) { this.style.display='none'; this.nextElementSibling.style.display='flex'; }">
                            <div class="thumbnail" style="display: none; background: linear-gradient(135deg, #667eea, #764ba2); color: white; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">
                                üìπ ${title.substring(0,20)}${title.length > 20 ? '...' : ''}
                            </div>
                            <button class="play-button" onclick="playVideo(this, '${videoUrl}')">
                                ‚ñ∂
                            </button>
                        </div>
                        <video class="video-player" controls style="display: none; width: 100%; height: 200px; background: #000;">
                            Your browser does not support the video tag.
                        </video>
                        </div>
                        <div class="video-title">
                            ${title}
                            <div style="margin-top: 8px;">
                                <button onclick="copyEmbedLink('${embedUrl}')" style="background: #28a745; color: white; border: none; padding: 4px 8px; border-radius: 4px; font-size: 12px; cursor: pointer; margin-right: 5px;">üîó Share</button>
                                <button onclick="generateThumbnail('${filename}')" style="background: #ffc107; color: black; border: none; padding: 4px 8px; border-radius: 4px; font-size: 12px; cursor: pointer;">üñºÔ∏è Thumb</button>
                            </div>
                        </div>
                    </div>
                `;
            } else {
                // Detect platform and create appropriate embed
                let embedSrc = '';
                let thumbnailSrc = '';
                let platformName = 'External';
                
                if (externalUrl.includes('youtube.com') || externalUrl.includes('youtu.be')) {
                    const videoId = externalUrl.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\n?#]+)/)?.[1];
                    if (videoId) {
                        embedSrc = `https://www.youtube.com/embed/${videoId}`;
                        thumbnailSrc = `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
                        platformName = 'YouTube';
                    }
                } else if (externalUrl.includes('rumble.com')) {
                    const rumbleMatch = externalUrl.match(/rumble\.com\/v([a-zA-Z0-9]+)/);
                    if (rumbleMatch) {
                        embedSrc = `https://rumble.com/embed/${rumbleMatch[1]}/`;
                        platformName = 'Rumble';
                    }
                } else if (externalUrl.includes('facebook.com') || externalUrl.includes('fb.watch')) {
                    embedSrc = `https://www.facebook.com/plugins/video.php?href=${encodeURIComponent(externalUrl)}&show_text=false&width=560&height=315`;
                    platformName = 'Facebook';
                }
                
                const typeBadge = `<span style="background: #007bff; color: white; padding: 2px 6px; border-radius: 3px; font-size: 10px; position: absolute; top: 5px; right: 5px; z-index: 10;">${platformName}</span>`;
                
                col.innerHTML = `
                    <div class="video-card">
                        <div class="thumbnail-container" style="position: relative;">
                            ${typeBadge}
                            ${thumbnailSrc ? `
                                <img src="${thumbnailSrc}" alt="${title}" class="thumbnail" loading="lazy"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="thumbnail" style="display: none; background: linear-gradient(135deg, #667eea, #764ba2); color: white; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">
                                    üé¨ ${title.substring(0,15)}${title.length > 15 ? '...' : ''}
                                </div>
                                <button class="play-button" onclick="playExternalVideo(this, '${embedSrc}')">
                                    ‚ñ∂
                                </button>
                                <div class="video-player" style="display: none; width: 100%; height: 200px;">
                                    <iframe src="" style="width: 100%; height: 100%; border: none;" allowfullscreen allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"></iframe>
                                </div>
                            ` : `
                                <div class="thumbnail" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; display: flex; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">
                                    üé¨ ${title.substring(0,15)}${title.length > 15 ? '...' : ''}
                                </div>
                                <button class="play-button" onclick="playExternalVideo(this, '${embedSrc}')">
                                    ‚ñ∂
                                </button>
                                <div class="video-player" style="display: none; width: 100%; height: 200px;">
                                    <iframe src="" style="width: 100%; height: 100%; border: none;" allowfullscreen allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"></iframe>
                                </div>
                            `}
                        </div>
                        <div class="video-title">
                            ${title}
                            <div style="margin-top: 8px;">
                                <a href="${externalUrl}" target="_blank" style="background: #007bff; color: white; text-decoration: none; padding: 4px 8px; border-radius: 4px; font-size: 12px; margin-right: 5px;">üîó Open</a>
                                <button onclick="copyEmbedLink('${embedUrl}')" style="background: #28a745; color: white; border: none; padding: 4px 8px; border-radius: 4px; font-size: 12px; cursor: pointer;">üìã Share</button>
                            </div>
                        </div>
                    </div>
                `;
            }
            
            container.appendChild(col);
        }
        
        function playVideo(button, videoUrl) {
            console.log('Playing video:', videoUrl);
            const card = button.closest('.video-card');
            const thumbnailContainer = card.querySelector('.thumbnail-container');
            const video = card.querySelector('.video-player');
            
            // Hide thumbnail container and show video
            thumbnailContainer.style.display = 'none';
            video.style.display = 'block';
            
            // Set video source and play
            video.src = videoUrl;
            video.load();
            
            video.addEventListener('error', function(e) {
                console.error('Video error:', e, video.error);
                thumbnailContainer.style.display = 'block';
                video.style.display = 'none';
            });
            
            video.play().catch(error => {
                console.error('Play error:', error);
                thumbnailContainer.style.display = 'block';
                video.style.display = 'none';
            });
            
            // Add close button to video
            if (!video.querySelector('.close-video')) {
                const closeBtn = document.createElement('button');
                closeBtn.className = 'close-video';
                closeBtn.innerHTML = '‚úï';
                closeBtn.style.cssText = 'position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.7); color: white; border: none; border-radius: 50%; width: 30px; height: 30px; cursor: pointer; z-index: 1000;';
                closeBtn.onclick = function() {
                    video.pause();
                    video.currentTime = 0;
                    thumbnailContainer.style.display = 'block';
                    video.style.display = 'none';
                };
                video.parentElement.style.position = 'relative';
                video.parentElement.appendChild(closeBtn);
            }
        }
        
        function setupTagFilter(allTags) {
            const tagFilter = document.getElementById('tag-filter');
            tagFilter.innerHTML = '<option value="">All Tags</option>';
            
            Array.from(allTags).sort().forEach(tag => {
                const option = document.createElement('option');
                option.value = tag;
                option.textContent = tag;
                tagFilter.appendChild(option);
            });
            
            tagFilter.addEventListener('change', applyFilters);
        }
        
        function setupSearch() {
            const searchInput = document.getElementById('search-input');
            searchInput.addEventListener('input', applyFilters);
        }
        
        function applyFilters() {
            const searchTerm = document.getElementById('search-input').value.toLowerCase();
            const selectedTag = document.getElementById('tag-filter').value;
            
            filteredVideos = allVideos.filter(video => {
                const matchesSearch = !searchTerm || 
                    video.title.toLowerCase().includes(searchTerm) || 
                    video.filename.toLowerCase().includes(searchTerm);
                
                const matchesTag = !selectedTag || video.tags.includes(selectedTag);
                
                return matchesSearch && matchesTag;
            });
            
            displayVideos(filteredVideos);
        }
        
        function setupCategoryFilter() {
            const categoryButtons = document.querySelectorAll('.category-btn');
            categoryButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    categoryButtons.forEach(b => {
                        b.classList.remove('active');
                        b.classList.remove('btn-primary');
                        b.classList.add('btn-outline-primary');
                    });
                    this.classList.add('active');
                    this.classList.add('btn-primary');
                    this.classList.remove('btn-outline-primary');
                    
                    currentCategory = this.dataset.category;
                    currentPage = 1;
                    
                    // Show loading
                    document.getElementById('loading').style.display = 'block';
                    document.getElementById('videos-container').style.display = 'none';
                    document.getElementById('load-more-container').style.display = 'none';
                    
                    loadVideos(1, currentCategory, false);
                });
            });
        }
        
        async function loadMoreVideos() {
            document.getElementById('loading-more').style.display = 'block';
            document.getElementById('load-more-btn').style.display = 'none';
            
            currentPage++;
            await loadVideos(currentPage, currentCategory, true);
            
            document.getElementById('loading-more').style.display = 'none';
            if (hasMore) {
                document.getElementById('load-more-btn').style.display = 'block';
            }
        }
        
        function playExternalVideo(button, embedSrc) {
            const card = button.closest('.video-card');
            const thumbnail = card.querySelector('.thumbnail');
            const playBtn = card.querySelector('.play-button');
            const videoPlayer = card.querySelector('.video-player');
            const iframe = videoPlayer.querySelector('iframe');
            
            thumbnail.style.display = 'none';
            playBtn.style.display = 'none';
            videoPlayer.style.display = 'block';
            
            iframe.src = embedSrc;
        }
        
        function getTagIcon(tag) {
            const iconMap = {
                'sermons': 'fas fa-church',
                'politics': 'fas fa-landmark',
                'teaching': 'fas fa-chalkboard-teacher',
                'news': 'fas fa-newspaper',
                'apologetics': 'fas fa-shield-alt',
                'ministry': 'fas fa-cross',
                'bible': 'fas fa-book',
                'worship': 'fas fa-music',
                'prayer': 'fas fa-praying-hands',
                'family': 'fas fa-home'
            };
            return iconMap[tag.toLowerCase()] || 'fas fa-video';
        }

        function getCategoryOrder() {
            // Get category order from localStorage, with fallback to default
            const savedOrder = localStorage.getItem('video_category_order');
            console.log('Getting category order from localStorage:', savedOrder);
            if (savedOrder) {
                const parsed = JSON.parse(savedOrder);
                console.log('Parsed category order:', parsed);
                return parsed;
            }
            
            // Default order
            const defaultOrder = [
                'news',
                'politics', 
                'sermons',
                'teaching',
                'apologetics',
                'ministry',
                'bible',
                'worship',
                'prayer',
                'family'
            ];
            
            console.log('Using default category order:', defaultOrder);
            // Save default order to localStorage
            localStorage.setItem('video_category_order', JSON.stringify(defaultOrder));
            return defaultOrder;
        }

        function sortCategoriesByPriority(categories) {
            const priorityOrder = getCategoryOrder();
            console.log('Sorting categories:', categories, 'with priority order:', priorityOrder);
            
            // Normalize priority order to lowercase for comparison
            const normalizedPriorityOrder = priorityOrder.map(cat => cat.toLowerCase());
            
            const sorted = categories.sort((a, b) => {
                const aIndex = normalizedPriorityOrder.indexOf(a.toLowerCase());
                const bIndex = normalizedPriorityOrder.indexOf(b.toLowerCase());
                
                console.log(`Comparing ${a} (index: ${aIndex}) with ${b} (index: ${bIndex})`);
                
                // If both categories are in priority list, sort by their position
                if (aIndex !== -1 && bIndex !== -1) {
                    return aIndex - bIndex;
                }
                // If only 'a' is in priority list, it comes first
                if (aIndex !== -1) return -1;
                // If only 'b' is in priority list, it comes first
                if (bIndex !== -1) return 1;
                // If neither is in priority list, sort alphabetically
                return a.localeCompare(b);
            });
            
            console.log('Final sorted categories:', sorted);
            return sorted;
        }

        function displayVideos(videos, append = false) {
            const container = document.getElementById('videos-container');
            if (!append) {
                container.innerHTML = '';
            }
            
            console.log('Displaying videos:', videos);
            
            if (append) {
                // For appended videos (load more), just add them without grouping
                for (const video of videos) {
                    const videoType = video.video_type || 'local';
                    const externalUrl = video.external_url || '';
                    
                    if (videoType === 'local') {
                        const baseName = video.filename.replace('.mp4', '');
                        const videoUrl = `${BUCKET_URL}/videos/${video.filename}`;
                        const thumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb_2.jpg`;
                        const fallbackThumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb.jpg`;
                        
                        createVideoCard(container, video.title, videoUrl, thumbnailUrl, fallbackThumbnailUrl, video.filename, videoType, externalUrl);
                    } else {
                        createVideoCard(container, video.title, '', '', '', video.filename, videoType, externalUrl);
                    }
                }
            } else {
                // Group videos by their primary tag for initial display
                const groupedVideos = {};
                const uncategorized = [];
                
                videos.forEach(video => {
                    if (video.tags && video.tags.length > 0) {
                        const primaryTag = video.tags[0]; // Use first tag as primary category
                        if (!groupedVideos[primaryTag]) {
                            groupedVideos[primaryTag] = [];
                        }
                        groupedVideos[primaryTag].push(video);
                    } else {
                        uncategorized.push(video);
                    }
                });
                
                // Display each category in priority order
                const sortedCategories = sortCategoriesByPriority(Object.keys(groupedVideos));
                console.log('Categories will be displayed in this order:', sortedCategories);
                sortedCategories.forEach(tag => {
                    // Create category header
                    const categoryHeader = document.createElement('div');
                    categoryHeader.className = 'category-header';
                    const icon = getTagIcon(tag);
                    categoryHeader.innerHTML = `<i class="${icon} me-2"></i>${tag.charAt(0).toUpperCase() + tag.slice(1)}`;
                    container.appendChild(categoryHeader);
                    
                    // Create scroll wrapper with arrows
                    const scrollWrapper = document.createElement('div');
                    scrollWrapper.className = 'scroll-wrapper';
                    
                    const leftBtn = document.createElement('button');
                    leftBtn.className = 'scroll-btn scroll-btn-left';
                    leftBtn.innerHTML = '‚óÄ';
                    leftBtn.onclick = () => row.scrollBy({ left: -320, behavior: 'smooth' });
                    
                    const rightBtn = document.createElement('button');
                    rightBtn.className = 'scroll-btn scroll-btn-right';
                    rightBtn.innerHTML = '‚ñ∂';
                    rightBtn.onclick = () => row.scrollBy({ left: 320, behavior: 'smooth' });
                    
                    // Create horizontal scroll container for this category's videos
                    const row = document.createElement('div');
                    row.className = 'horizontal-scroll-container';
                    
                    groupedVideos[tag].forEach(video => {
                        const videoType = video.video_type || 'local';
                        const externalUrl = video.external_url || '';
                        
                        if (videoType === 'local') {
                            const baseName = video.filename.replace('.mp4', '');
                            const videoUrl = `${BUCKET_URL}/videos/${video.filename}`;
                            const thumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb_2.jpg`;
                            const fallbackThumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb.jpg`;
                            
                            createVideoCard(row, video.title, videoUrl, thumbnailUrl, fallbackThumbnailUrl, video.filename, videoType, externalUrl);
                        } else {
                            createVideoCard(row, video.title, '', '', '', video.filename, videoType, externalUrl);
                        }
                    });
                    
                    scrollWrapper.appendChild(leftBtn);
                    scrollWrapper.appendChild(row);
                    scrollWrapper.appendChild(rightBtn);
                    container.appendChild(scrollWrapper);
                    
                    requestAnimationFrame(() => {
                        leftBtn.style.display = 'none';
                        rightBtn.style.display = row.scrollWidth > row.clientWidth ? 'block' : 'none';
                    });
                    
                    row.addEventListener('scroll', () => {
                        leftBtn.style.display = row.scrollLeft > 0 ? 'block' : 'none';
                        rightBtn.style.display = row.scrollLeft < row.scrollWidth - row.clientWidth - 1 ? 'block' : 'none';
                    });
                });
                
                // Add uncategorized videos if any
                if (uncategorized.length > 0) {
                    const categoryHeader = document.createElement('div');
                    categoryHeader.className = 'category-header';
                    categoryHeader.innerHTML = `<i class="fas fa-video me-2"></i>Uncategorized`;
                    container.appendChild(categoryHeader);
                    
                    const scrollWrapper = document.createElement('div');
                    scrollWrapper.className = 'scroll-wrapper';
                    
                    const leftBtn = document.createElement('button');
                    leftBtn.className = 'scroll-btn scroll-btn-left';
                    leftBtn.innerHTML = '‚óÄ';
                    leftBtn.onclick = () => row.scrollBy({ left: -320, behavior: 'smooth' });
                    
                    const rightBtn = document.createElement('button');
                    rightBtn.className = 'scroll-btn scroll-btn-right';
                    rightBtn.innerHTML = '‚ñ∂';
                    rightBtn.onclick = () => row.scrollBy({ left: 320, behavior: 'smooth' });
                    
                    const row = document.createElement('div');
                    row.className = 'horizontal-scroll-container';
                    
                    uncategorized.forEach(video => {
                        const videoType = video.video_type || 'local';
                        const externalUrl = video.external_url || '';
                        
                        if (videoType === 'local') {
                            const baseName = video.filename.replace('.mp4', '');
                            const videoUrl = `${BUCKET_URL}/videos/${video.filename}`;
                            const thumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb_2.jpg`;
                            const fallbackThumbnailUrl = `${BUCKET_URL}/thumbnails/${baseName}_thumb.jpg`;
                            
                            createVideoCard(row, video.title, videoUrl, thumbnailUrl, fallbackThumbnailUrl, video.filename, videoType, externalUrl);
                        } else {
                            createVideoCard(row, video.title, '', '', '', video.filename, videoType, externalUrl);
                        }
                    });
                    
                    scrollWrapper.appendChild(leftBtn);
                    scrollWrapper.appendChild(row);
                    scrollWrapper.appendChild(rightBtn);
                    container.appendChild(scrollWrapper);
                    
                    requestAnimationFrame(() => {
                        leftBtn.style.display = 'none';
                        rightBtn.style.display = row.scrollWidth > row.clientWidth ? 'block' : 'none';
                    });
                    
                    row.addEventListener('scroll', () => {
                        leftBtn.style.display = row.scrollLeft > 0 ? 'block' : 'none';
                        rightBtn.style.display = row.scrollLeft < row.scrollWidth - row.clientWidth - 1 ? 'block' : 'none';
                    });
                }
            }
        }
        
        function clearFilters() {
            document.getElementById('search-input').value = '';
            document.getElementById('tag-filter').value = '';
            applyFilters();
        }
        
        function copyEmbedLink(embedUrl) {
            navigator.clipboard.writeText(embedUrl).then(() => {
                const message = document.createElement('div');
                message.style.cssText = 'position: fixed; top: 20px; right: 20px; background: #28a745; color: white; padding: 10px 20px; border-radius: 4px; z-index: 1000;';
                message.textContent = 'Embed link copied to clipboard!';
                document.body.appendChild(message);
                setTimeout(() => message.remove(), 3000);
            }).catch(() => {
                prompt('Copy this embed link:', embedUrl);
            });
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        async function generateThumbnail(filename) {
            const authToken = localStorage.getItem('auth_token');
            if (!authToken) return;
            
            try {
                const response = await fetch('https://k2avuckm38.execute-api.us-east-1.amazonaws.com/prod/admin?action=generate_thumbnail', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${authToken}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ filename: filename })
                });
                
                if (response.ok) {
                    alert('Thumbnail generation started for ' + filename);
                    // Reload page after 10 seconds to show new thumbnail
                    setTimeout(() => location.reload(), 10000);
                } else {
                    alert('Failed to generate thumbnail');
                }
            } catch (error) {
                console.error('Thumbnail generation error:', error);
                alert('Error generating thumbnail');
            }
        }
        
        function viewMyPage() {
            const userData = localStorage.getItem('user_data');
            if (userData) {
                const user = JSON.parse(userData);
                window.location.href = `user-page.html?user=${encodeURIComponent(user.email)}`;
            }
        }
        
        function logout() {
            localStorage.removeItem('auth_token');
            localStorage.removeItem('user_data');
            window.location.href = 'login.html';
        }
        
        document.addEventListener('DOMContentLoaded', async function() {
            const isAuthenticated = await checkAuth();
            if (isAuthenticated) {
                loadVideos();
                
                // Check for category order changes every 2 seconds
                setInterval(checkCategoryOrderChanges, 2000);
            }
        });
        
        function checkCategoryOrderChanges() {
            const currentCheck = localStorage.getItem('category_order_changed') || '0';
            if (currentCheck !== lastCategoryCheck && allVideos.length > 0) {
                console.log('Category order changed, refreshing display');
                displayVideos(allVideos);
                lastCategoryCheck = currentCheck;
            }
        }
        
        window.refreshCategoryOrder = function() {
            console.log('=== REFRESH CATEGORY ORDER ===');
            console.log('allVideos length:', allVideos.length);
            console.log('localStorage video_category_order:', localStorage.getItem('video_category_order'));
            
            if (allVideos.length > 0) {
                console.log('Sample video tags:', allVideos[0].tags);
                console.log('All video tags:', allVideos.map(v => v.tags));
                displayVideos(allVideos);
            } else {
                console.log('No videos loaded');
            }
        }
        
        window.testCategoryOrder = function() {
            console.log('=== TESTING CATEGORY ORDER ===');
            const testOrder = ['sermons', 'news', 'politics'];
            localStorage.setItem('video_category_order', JSON.stringify(testOrder));
            console.log('Set test order:', testOrder);
            if (allVideos.length > 0) {
                displayVideos(allVideos);
            }
        }
        
        window.checkProphecyVideos = function() {
            console.log('=== CHECKING PROPHECY VIDEOS ===');
            const prophecyVideos = allVideos.filter(v => v.tags && v.tags.includes('prophecy'));
            console.log('Total videos loaded:', allVideos.length);
            console.log('Videos with prophecy tag:', prophecyVideos.length);
            prophecyVideos.forEach(v => {
                console.log(`- ${v.title}: [${v.tags.join(', ')}]`);
            });
            
            // Check all unique categories
            const allCategories = [...new Set(allVideos.filter(v => v.tags && v.tags.length > 0).map(v => v.tags[0]))];
            console.log('All categories found:', allCategories);
        }
        
        // Check for category order changes when page gains focus
        let lastCategoryCheck = localStorage.getItem('category_order_changed') || '0';
        
        window.addEventListener('focus', function() {
            const currentCheck = localStorage.getItem('category_order_changed') || '0';
            if (currentCheck !== lastCategoryCheck && allVideos.length > 0) {
                displayVideos(allVideos);
                lastCategoryCheck = currentCheck;
            }
        });
        
        // Also check on page load
        window.addEventListener('load', function() {
            lastCategoryCheck = localStorage.getItem('category_order_changed') || '0';
        });
        
        // Load more button event listener
        document.getElementById('load-more-btn').addEventListener('click', loadMoreVideos);
    </script>
    
