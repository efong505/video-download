    <style>
        .video-card {
            position: relative;
            cursor: pointer;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }
        .video-card:hover {
            transform: scale(1.02);
        }
        .thumbnail-container {
            position: relative;
            width: 100%;
            height: 200px;
            background: #000;
        }
        .thumbnail {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.7);
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            color: white;
            font-size: 24px;
            cursor: pointer;
            transition: background 0.2s;
        }
        .play-button:hover {
            background: rgba(0,0,0,0.9);
        }
        .video-player {
            display: none;
            width: 100%;
            height: 200px;
        }
        .video-title {
            padding: 10px;
            background: #f8f9fa;
            font-weight: bold;
            text-align: center;
        }
        .loading {
            text-align: center;
            padding: 20px;
        }
